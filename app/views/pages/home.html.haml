- provide(:title, 'Home Page')
- if signed_in?
  %table.front
    %tr
      %td.main
        %h1.micropost What's up?
        = render 'shared/micropost_form'
        = render 'shared/feed'
      %td.sidebar.round
        = render 'shared/user_info'
        = render 'shared/stats'
- else
  %h1="Home Page h1"
  %p
    This is the home page for the
    = link_to "My Site", "http://google.com"
    sample application.
  = link_to "Sign up now!", signup_path, class: "signup_button round"

